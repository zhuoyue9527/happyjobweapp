.pt-bg{
    width: 100%;
}
.box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 100rpx 0;
}
.title{
    color: #333;
    font-size: 30rpx;
    margin-bottom: 35rpx;
}
.text{
    color: #999;
    font-size: 25rpx;
    line-height: 36rpx;
}

.btn-fail{
    background-image: linear-gradient(90deg, #ec845e 0%, #e95146 100%), linear-gradient(#7ad2d6, #7ad2d6);
    font-size: 36rpx;
    color: #fff;
    margin: 40rpx;
}

.success .title{
  color: #666;
  font-size: 30rpx;
  line-height: 48rpx;
  font-weight: 700;
}
