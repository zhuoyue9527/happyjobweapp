/* 轮播图 */
.slide-image {
  width: 100%;
}
/* 拼团列表 */
.box-body {
  margin-top: 10rpx;
  width: 100%;
  overflow: hidden;
}
.mg190 {
  margin-bottom: 190rpx;
}
.box-item {
  display: flex;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #999;
  box-sizing: border-box;
  border-bottom: 1px solid #eaeaea;
}
.box-item view {
  margin-bottom: 10rpx;
}
.box-item view::after {
  margin-bottom: 0;
}
.box-item .box-item-img {
  display: flex;
  flex: 0 0 auto;
  width: 150rpx;
  height: 150rpx;
  border-radius: 6rpx;
  background: #fff;
}
.box-item .box-item-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  box-sizing: border-box;
  overflow: hidden;
}
.box-item .one {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333;
}
.box-item .one .job {
  color: #333;
  font-size: 22rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  letter-spacing: 4rpx;
}
.box-item .one .salary {
  color: #ef7618;
  font-size: 30rpx;
  font-weight: bold;
}
.box-item .one .danwei {
  font-size: 20rpx;
  font-weight: 400;
}
.box-item .one .fan {
  background: url("https://weapp.hap-job.com/uploadFiles/images/home/fanBg.png") no-repeat;
  background-size: 100% 100%;
  margin-left: 10rpx;
  font-size: 16rpx;
  padding: 4rpx 20rpx;
  color: #fff;
}
.box-item .two {
  display: flex;
  justify-content: space-between;
  color: #909090;
  font-size: 20rpx;
}
.box-item .three {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
}
.box-item .four {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #3c3c3c;
  background: #fff5e1;
  padding: 10rpx 20rpx;
}
.box-item .four .pt-member {
  font-size: 22rpx;
}
.box-item .four .number {
  font-size: 28rpx;
  font-weight: 700;
}
.box-item .four .endtime {
  font-size: 20rpx;
}
.box-item .item-hover {
  background: #cacfd3;
}
.tag-class {
  color: #37aceb;
  background: #e2f4fe!important;
  margin-right: 10rpx;
  white-space: nowrap;
}
/* 我的拼团 */
.box {
  border-bottom: 2px solid #fff;
}
.box .box-body {
  margin-top: 2rpx;
  width: 100%;
  overflow: hidden;
}
.box .box-item {
  display: flex;
  padding: 20rpx;
  font-size: 28rpx;
  color: #bcedfd;
  box-sizing: border-box;
  background: #428fba;
}
.box .box-item .box-item-img {
  display: flex;
  flex: 0 0 auto;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: #fff;
}
.box .box-item .box-item-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  padding: 0 15rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.box .box-item .job {
  color: #fff;
  white-space: nowrap;
}
.box .box-item .componey {
  color: #bcedfd;
  font-size: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.box .box-item .fan {
  margin-left: 10rpx;
  font-size: 24rpx;
}
.box .box-item .three {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.box .box-item .limit {
  overflow: hidden;
  margin-right: 10rpx;
}
.box .box-item .number {
  font-size: 46rpx;
  color: #fff;
  margin-bottom: -4rpx;
}
.box .box-footer {
  padding: 0 20rpx;
  box-sizing: border-box;
}
.box .box-footer .box-footer-content {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  border-top: 1px solid #ccc;
  padding: 10rpx 0;
}
.box .box-footer .endTime {
  color: #009999;
  font-size: 24rpx;
}
/* 我的拼团 */
.myPT {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.myPT .box {
  border: none;
}
.djs {
  display: flex;
  align-items: flex-end;
  font-size: 24rpx;
  color: #bcedfd;
}
