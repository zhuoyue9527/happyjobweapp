page {
  background: #f4f4f4;
}
.banner-bg {
  width: 100%;
}
.card {
  width: 670rpx;
  margin: 0 40rpx;
  background: #fff;
  z-index: 3;
  box-shadow: 0px 6rpx 33rpx 0px rgba(107, 107, 107, 0.31);
  border-radius: 8rpx;
  margin-bottom: 37rpx;
}
.card.marginT {
  position: relative;
  top: -120rpx;
}
.card .logo {
  width: 100rpx;
  height: 100rpx;
}
.card .store-title {
  display: flex;
  font-size: 30rpx;
  color: #323232;
  font-weight: 700;
}
.card .info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 40rpx;
}
.card .work-hour {
  font-size: 22rpx;
  color: #909090;
}
.card .list {
  padding-top: 30rpx;
}
.card .li {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  padding: 15rpx 0;
}
.card .li .icon-address {
  width: 26rpx;
  height: 33rpx;
  margin-right: 25rpx;
}
.card .li .icon-phone {
  width: 31rpx;
  height: 26rpx;
  margin-right: 23rpx;
}
.card .li .lable {
  color: #323232;
  white-space: nowrap;
}
.card .li .content {
  color: #909090;
  margin-left: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.card .li .map {
  width: 46rpx;
  height: 46rpx;
  flex: 0 0 auto;
}
.card-header {
  font-size: 30rpx;
  color: #323232;
  padding: 33rpx 36rpx;
  box-sizing: border-box;
  font-weight: 700;
  font-family: 'MicrosoftYaHei-Bold';
  border-bottom: 1px solid #daeaea;
}
.card-body {
  font-size: 26rpx;
  padding: 30rpx 40rpx 0;
}
.card .route {
  line-height: 50rpx;
}
.card .pd80 {
  padding-bottom: 80rpx;
}
.card .pd46 {
  padding-bottom: 46rpx;
}
.auth-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: 99;
}
.auth-modal {
  position: absolute;
  top: 20%;
  left: 50%;
  width: 520rpx;
  box-shadow: 0px 12px 59px 3px rgba(0, 0, 0, 0.09);
  border-radius: 10px;
  border: 1px solid #17a9ff;
  background: #fff;
  transform: translateX(-50%);
  box-sizing: border-box;
  z-index: 99;
  overflow: hidden;
}
.auth-modal .title {
  font-size: 34rpx;
  color: #333;
  text-align: center;
  padding: 40rpx;
}
.auth-modal .content {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  padding: 0 40rpx 40rpx;
}
.auth-modal .footer {
  display: flex;
  border-top: 1px solid #eaeaea;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
}
.auth-modal .footer .btn {
  width: 50%;
  flex: 0 0 auto;
  color: #999;
  background: #fff;
  border-right: 1px solid #eaeaea;
}
.auth-modal .footer .btn:last-child {
  border-right: 0;
}
.auth-modal .footer button {
  font-size: 28rpx;
  padding: 0;
  line-height: 80rpx;
  border-radius: 0;
}
.auth-modal .footer button::after {
  border: 0;
}
